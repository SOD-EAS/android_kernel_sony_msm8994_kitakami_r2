### GCC 4.9.x
### I'm using Linaro 4.9 by mdalexca TC bitbucket.org/mdalexca/

export USE_CCACHE=1

export CACHE_DIR=~/.ccache

export ARCH=arm64
export PATH=~/android/z5_build-environment/arter97_linaro-64_6.2/bin/:$PATH
export CROSS_COMPILE=aarch64-linux-android-

#export KBUILD_DIFFCONFIG=suzuran_diffconfig
make kitakami_suzuran_defconfig
###make oldconfig
make -j8

echo "checking for compiled kernel..."
if [ -f arch/arm64/boot/Image.gz-dtb ]
then

#echo "generating device tree..."
#make dtbs
#../final_files/dtbToolCM --force-v2 -o ../final_files/dt.img -s 2048 -p ./scripts/dtc/ ./arch/arm/boot/dts/

### copy zImage
#cp arch/arm64/boot/Image ../final_files/. 

	echo "okay"

	### E5823
	../final_files/mkqcdtbootimg --cmdline "androidboot.hardware=qcom user_debug=31 msm_rtb.filter=0x237 ehci-hcd.park=3 lpm_levels.sleep_disabled=1 boot_cpus=0-3 dwc3_msm.prop_chg_detect=Y zram.backend=z3fold coherent_pool=2M dwc3_msm.hvdcp_max_current=1500 androidboot.selinux=enforcing enforcing=1 buildvariant=userdebug" --base 0x00000000 --kernel arch/arm64/boot/Image.gz-dtb --ramdisk ../final_files/Z5Comp_suzuran_carbonrom_7.1.1.img-ramdisk_03.04.2017.cpio.gz --ramdisk_offset 0x02000000 --pagesize 4096 -o ../final_files/boot_E5823.img --tags_offset 0x01E00000
	### Enforcing build
	#../final_files/mkqcdtbootimg --cmdline "androidboot.hardware=qcom user_debug=31 msm_rtb.filter=0x237 ehci-hcd.park=3 lpm_levels.sleep_disabled=1 boot_cpus=0-3 dwc3_msm.prop_chg_detect=Y zram.backend=z3fold coherent_pool=2M dwc3_msm.hvdcp_max_current=1500 androidboot.selinux=enforcing enforcing=1 buildvariant=userdebug" --base 0x00000000 --kernel arch/arm64/boot/Image.gz-dtb --ramdisk ../final_files/Z5Comp_suzuran_carbonrom_7.1.1.img-ramdisk_03.04.2017.cpio.gz --ramdisk_offset 0x02000000 --pagesize 4096 -o ../final_files/boot_E5823_E.img --tags_offset 0x01E00000

	### Version number
	echo -n "Enter version number: "
	read version

	echo "Packaging 'Enforcing' kernel"
	echo " "

	if [ -e ../final_files/boot_E5823.img ]
	then

		### Zip boot.img
		cd ../final_files/
		mv boot_E5823.img boot.img
		zip -r Z5Comp_SK_Enf_v.zip boot.img META-INF/
		rm -f boot.img

		echo " "
		echo "Copying to z5-kernelbuild"
		echo " "

		cp ~/android/final_files/Z5Comp_SK_Enf_v.zip ~/android/z5-kernelbuild/Z5Comp_SK_Enf_v$version.zip
	
	fi

#		echo "Packaging 'Enforcing' kernel"
#		echo " "

